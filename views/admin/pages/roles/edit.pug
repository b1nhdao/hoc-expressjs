extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4") Chinh sua nhom quyen 
    +alert-success(5000)
    +alert-error(5000)

    form(action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH` method= "POST")
        div(class="form-group")
            label(for="title") Tieu de
            input(type="text" id="title" name="title" class="form-control" required value=data.title)
        div(class="form-group")
            label(for="description") Mo ta
            input(type="text" id="description" name="description" class="form-control" required value=data.description)
        div(class="form-group")
            button(type="submit" class="btn btn-small btn-primary") Cap nhat
