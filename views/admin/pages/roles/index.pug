extends ../../layouts/default.pug

block main 
    h1(class = 'mb-4') Nhom quyen 

    .card.mb-3 
        .card-header Danh sach 
        .card-body 
            .row
                .col-8 
                .col-4.right
                    a(
                        href=`${prefixAdmin}/roles/create`
                        class="btn btn-outline-success"
                    ) + Them moi

            table(class="table table-hover table-sm")
                thead 
                    tr 
                        th STT 
                        th Nhom quyen 
                        th Mo ta ngan 
                        th Hanh dong 
                tbody 
                    if(records.length > 0)
                        each item, index in records
                            tr 
                                td #{index + 1}
                                td #{item.title}
                                td #{item.description}
                                td 
                                    a(href=`${prefixAdmin}/roles/details/${item.id}`
                                    class="btn btn-sm btn-secondary ml-1") Chi tiet
                                    a(href=`${prefixAdmin}/roles/edit/${item.id}`
                                    class="btn btn-sm btn-warning ml-1") Sua
                                    a(href=`${prefixAdmin}/roles/delte/${item.id}`
                                    class="btn btn-sm btn-danger ml-1") Xoa 
                    else 
                        tr 
                            td(colspan="4" class="text-center") Chua co nhom quyen nao duoc tao !