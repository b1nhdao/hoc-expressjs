extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Danh sach san pham")     
        .row
            each item in products
                .col-4
                    .product-item 
                        .inner-image 
                            img(src=item.thumbnail, alt=item.title)
                        .inner-content
                            h3.inner-title 
                                a(href=`/products/${item.slug}`) #{item.title} 
                            //- .inner-price-new  #{Math.round(item.price * (100 - item.discountPercentage) * 0.01)}$
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price}$
                            .inner-discont #{item.discountPercentage}%
                            